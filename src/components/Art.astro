---
interface Props {
    title: string;
    class: string;
}
const { title, class: bg } = Astro.props;
---

<article
    class={`${bg} rounded-xl h-80 w-80 text-center flex  flex-col items-center cursor-pointer text-wrap`}
>
    <h3 class="text-2xl font-old">{title}</h3>
    <p><slot /></p>
</article>
